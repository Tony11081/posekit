# Database Configuration
POSTGRES_DB=posekit
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_super_secure_password_here
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:your_super_secure_password_here@localhost:5432/posekit

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379
REDIS_URL=redis://:your_redis_password_here@localhost:6379

# JWT & Security
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=7d

# API Configuration
API_PORT=3001
WEB_PORT=3000

# CDN & Upload Configuration
CDN_BASE_URL=https://your-domain.com/uploads
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# Frontend URLs
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXT_PUBLIC_CDN_URL=https://your-domain.com/uploads

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=PoseKit <noreply@your-domain.com>

# Admin Configuration
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=admin_password_change_this

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry Error Tracking (optional)
SENTRY_DSN=https://your-sentry-dsn

# Environment
NODE_ENV=production

# Domain Configuration
DOMAIN=your-domain.com