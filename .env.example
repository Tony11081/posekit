# Environment Configuration
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://posekit_user:your_password@localhost:5432/posekit
POSTGRES_PASSWORD=your_secure_postgres_password

# Redis Configuration  
REDIS_URL=redis://:your_redis_password@localhost:6379
REDIS_PASSWORD=your_secure_redis_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# API Configuration
API_PORT=3001
API_HOST=0.0.0.0

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_CDN_URL=https://cdn.posekit.com  
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# CDN/Storage Configuration
CDN_URL=https://cdn.posekit.com
STORAGE_PROVIDER=aws-s3
# For AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=posekit-assets

# For Cloudflare R2 (alternative)
# CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key
# CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_key
# CLOUDFLARE_R2_BUCKET=posekit-assets
# CLOUDFLARE_R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com

# Email Configuration (Optional - for user invitations, password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@posekit.com

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3002
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Analytics (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_REALTIME_UPDATES=false
ENABLE_ADVANCED_SEARCH=true
ENABLE_BULK_OPERATIONS=true
ENABLE_USER_INVITATIONS=true
ENABLE_ANALYTICS=true
ENABLE_EXPERIMENTAL_FEATURES=false

# Image Processing Configuration
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=10
SUPPORTED_IMAGE_FORMATS=jpeg,jpg,png,webp
TARGET_IMAGE_WIDTH=768
TARGET_IMAGE_QUALITY=82
TARGET_ALPHA_QUALITY=90

# Cache Configuration
CACHE_TTL_POSES=3600
CACHE_TTL_ASSETS=7200  
CACHE_TTL_SEARCH=1800
CACHE_TTL_SITEMAP=86400

# Development Only
DEBUG_SQL=false
DEBUG_UPLOADS=false

# Dokploy Deployment (Production)
DOKPLOY_PROJECT_ID=posekit
DOKPLOY_COMPOSE_FILE=docker/docker-compose.prod.yml

# SSL/TLS (Production)
SSL_CERT_PATH=/etc/nginx/ssl/posekit.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/posekit.com.key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=posekit-backups